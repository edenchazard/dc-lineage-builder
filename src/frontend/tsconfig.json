{
  "compilerOptions": {
    "jsx": "preserve",
    "target": "ES2021",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true,
    "types": ["vite/client"]
  },
  "include": ["./src/**/*.ts", "**/*.d.ts", "./src/**/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
