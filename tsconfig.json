{
  "compilerOptions": {
    "target": "ES2021",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true,
    "verbatimModuleSyntax": true,
    "paths": {
      "@shared/*": ["./shared/*"]
    }
  },
  "exclude": ["node_modules/**", "coverage/**"]
}
